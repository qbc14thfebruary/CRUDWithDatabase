<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<%
=begin%>
 <div>
  <%= seach_form_for  @q do |f| %>
    <%= f.label :title %>
    <%= f.search_field :title %>

    <%= f.submit value="Search"%>
  <% end %>
</div>
<%
=end%>


<ul>
  <% @articles.each do |article| %>
    <li>
      <a href="/articles/<%= article.id %>">
        <%= article.title %>
      </a>
    </li>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>

<ul>
  <li>
    <%= link_to "New Article" , new_article_path %>
  </li>

  <li>
    <%= form_tag import_articles_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Import" %>
    <% end %>
  </li>
</ul>

<div>
  <h1>Upload file</h1>

 <div>
    <%= form_for :uploadFile, url: articles_uploadFile_path do |f| %>
      <%=f.file_field :file %>
      <br>
      <%=f.submit value="Upload"%>
    <% end %>
  </div>
</div>

 <h1>Download file</h1>
  <div>
    <%= form_for :downloadFile, url: articles_downloadFile_path do |form| %>
      <%=form.text_field :fileName %>
      <br>
      <%=form.submit value="Download"%>
    <% end %>
  </div>


<div>
  <div>
    <ul>
      <li>
        <%= will_paginate(@articles,:previous_label => "&laquo;",
                                    :next_label     => "&raquo;",
                                    :class          => "small-font",
                                    :outer_window   => 1,
                                    :inner_window   => 0) %>
      </li>
    </ul>

  </div>

  <div>

    <span><%= page_entries_info(@articles) %></span>

  </div>

</div>



